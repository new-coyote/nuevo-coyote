---
layout: app.njk
title: Posts
eleventyNavigation:
    key: Posts
    order: 6
alias:
    - /post/
    - /post/archive/
    - /post/archive/1/
---
<div class="flex flex-col items-center">
    <header class="max-w-5xl mb-12">
        <h1 class="text-5xl font-bold font-heading -skew-y-6 transform mb-6 border-b-4 border-teal pb-2 pr-2">{{
            title
            }}</h1>
    </header>

    {%  if content.length > 1 %}
    <div class="post-index-content max-w-6xl px-4 py-10 w-full grid lg:grid-cols-2 gap-8">
        {{ content | safe }}
    </div>
    {%  endif %}

    <div class="max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-8">
        {%- for post in collections.post -%}
            {% include "partials/post/preview.njk" %}
        {%- endfor -%}
    </div>

    {% if collections.post.length > 8 %}
        <div class="flex justify-end px-6">
            <div class="relative inline-block highlight">
                <p class="relative z-10 mb-2 text-lg italic font-heading">Looking for more?</p>
                <a href="/post/archive/2" class="relative z-10 text-xl font-bold link text-teal">Visit the Archive</a>
            </div>
        </div>
    {% endif %}
</div>
